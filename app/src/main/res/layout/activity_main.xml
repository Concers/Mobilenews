<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="textView"
            type="String" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{textView}">

            </TextView>

            <androidx.fragment.app.FragmentContainerView

                android:id="@+id/frmContainerNews1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"

                android:clickable="true"
                android:focusable="true">

            </androidx.fragment.app.FragmentContainerView>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/frmContainerNews2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.fragment.app.FragmentContainerView>


            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/frmContainerNews3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.fragment.app.FragmentContainerView>


            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/frmContainerNews4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.fragment.app.FragmentContainerView>


            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/frmContainerNews5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.fragment.app.FragmentContainerView>


            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/frmContainerNews6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.fragment.app.FragmentContainerView>


            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/frmContainerNews7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.fragment.app.FragmentContainerView>


            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/frmContainerNews8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.fragment.app.FragmentContainerView>


            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/frmContainerNews9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.fragment.app.FragmentContainerView>


            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/frmContainerNews10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.fragment.app.FragmentContainerView>


            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/frmContainerNews11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.fragment.app.FragmentContainerView>


            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/frmContainerdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.fragment.app.FragmentContainerView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>